<div class="experience-item mb-4">
    <h3 class="text-2xl font-semibold mb-2">@jobTitle</h3>
    <p class="text-gray-600">@jobName - @jobPeriod</p>
    <ul class="list-disc pl-5 pt-3">
        @foreach (var item in jobDescription)
        {
            <li>@item</li>
        }
    </ul>
</div>


@code {
    [Parameter]
    public string jobTitle { get; set; }

    [Parameter]
    public string jobName { get; set; }

    [Parameter]
    public string jobPeriod { get; set; }

    [Parameter]
    public IEnumerable<string> jobDescription { get; set; }
}
